							%h4.section-heading 
								%button#speed-dial-select.btn.select.animated
									Speed Dial
									%i.material-icons.right expand_more
						#top-sites.card-list-column
							%h4.section-heading 
								%button#top-sites-select.btn.select.animated
									Top Sites
									%i.material-icons.right expand_more
