						%button#view-history.btn.btn-toolbar
							%i.material-icons history
							History
					%li
						%button#view-downloads.btn.btn-toolbar
							%i.material-icons file_download
							Downloads
					%li
						%button#go-incognito.btn.btn-toolbar
							Go Incognito
							%i.material-icons open_in_new
					%li
